<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".AboutActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:padding="20dp"
        android:background="#9943e6"
        app:srcCompat="@drawable/about_me"
        tools:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:text="ABOUT US"
        android:textColor="#151414"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:rotation="-360"
        android:rotationX="-360"
        android:rotationY="-360"
        android:text="ZakatConverterAcap "
        android:textColor="#101010"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/phoneIcon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="#000000"
            android:backgroundTint="#000000"
            app:srcCompat="@android:drawable/ic_menu_call" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="Phone Number: 04-4569875"
            android:textColor="#161616"
            android:textSize="14sp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="20dp">
        
    <ImageView
        android:id="@+id/location"
        android:layout_width="18dp"
        android:layout_height="16dp"
        android:background="#000000"
        android:backgroundTint="#151515"
        app:srcCompat="@android:drawable/ic_dialog_map" />

        <TextView
            android:id="@+id/open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Open: 24/7"
            android:textColor="#161616"
            android:textSize="14sp" />
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="20dp">
        
    <ImageView
        android:id="@+id/openIcon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:background="#000000"
        app:srcCompat="@android:drawable/ic_menu_recent_history" />
        
        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Address: Kulim,kedah, Malaysia"
            android:textColor="#161616"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:gravity="bottom|center_horizontal">

        <TextView
            android:id="@+id/textViewLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/messageWithLink"
            android:textColor="#FF9800"
            android:textColorLink="#171717"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="copyright @ ZakatConverterAcap"
            android:textSize="10sp"
            android:textStyle="bold|italic" />
    </LinearLayout>




</LinearLayout>